<h2 class='center-text'>Dodaj turniej</h2>

<div class='row'>
  <div class='col-xs-12 col-sm-3 col-md-3 col-lg-2'>
    <form role='form', class='new-tournament-form format-form'>
      <div class='form-group' {{bind-attr class="errors.name:has-error"}}>
        <label for "name">Nazwa</labelr><br />
        {{input value=name class="form-control" placeholder="Nazwa turnieju"}}
        {{#if errors.name }}
          <div class='help-block'>
            {{#each error in errors.name}}
              <span class='attribute-error'>
                {{error.message}}
              </span>
            {{/each}}
          </div>
        {{/if}}
      </div>
      <div class='form-group'>
        <label for "city">Miasto</labelr><br />
        {{input value=city class="form-control" placeholder="Miasto turnieju"}}
        {{#if errors.city }}
          <div class='help-block'>
            {{#each error in errors.city}}
              <span class='attribute-error'>
                {{error.message}}
              </span>
            {{/each}}
          </div>
        {{/if}}
      </div>

      <div class='form-group'>
        <label for "type">Ranga turnieju</labelr><br />
        {{view "Ember.Select" content=names value=type}}
      </div>

      <div class='form-group'>
        <label for "csv">Plik z wynikami</label><br />
        {{view Wh40kRank.UploadFile file=csv name="csv" }}
        {{#if errors.attachment }}
          <div class='help-block'>
            {{#each error in errors.attachment}}
              <span class='attribute-error'>
                {{error.message}}
              </span>
            {{/each}}
          </div>
        {{/if}}
      </div>

      <button class='btn btn-lg btn-primary btn-block' {{action "createTournament"}}>
        Utw√≥rz turniej
      </button>


    </form>
  </div>
  <div class='col-xs-12 col-sm-9 col-md-9 col-lg-10'>
    <table class='table table-striped pull-left tournament-preview'>
      <thead>
        <tr>
          <th>Miejsce</th>
          <th>ID</th>
          <th>Imie</th>
          <th>Nazwisko</th>
          <th>Armia</th>
          <th>Miasto</th>
        </tr>
      </thead>
      <tbody>
        {{#each result in attachment}}
          <tr>
            <td>{{result.[0]}}</td>
            <td>{{result.[1]}}</td>
            <td>{{result.[2]}} </td>
            <td>{{result.[3]}}</td>
            <td>{{result.[4]}}</td>
            <td>{{result.[5]}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>